<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.shianxian.supervise.sys.dao.RoleDao">

    <select id="insertRole" resultType="java.lang.String">
        CALL Proc_T_Role_Add(#{role.roleName}, #{role.moduleAuthority})
    </select>

    <select id="updateRole" resultType="java.lang.String">
        CALL Proc_T_Role_Edit_ByRoleTag(#{role.roleTag}, #{role.roleName}, #{role.moduleAuthority})
    </select>

    <select id="deleteRoleById" resultType="java.lang.String">
        CALL proc_T_Role_Remove_ByRoleTag(#{id})
    </select>

    <resultMap id="role" type="cn.shianxian.supervise.sys.pojo.Role"></resultMap>

    <select id="selectRoleByLike" resultMap="role,pageCount,totalCount">
        CALL proc_T_Role_Query_ByCondition
        (
        #{queryPojo.name},
        #{pages.pageSize},
        #{pages.pageNum}
        )
    </select>
</mapper>